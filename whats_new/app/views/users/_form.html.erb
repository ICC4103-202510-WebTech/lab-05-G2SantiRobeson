<%= form_with model: @user, local: true, html: { class: "w-50 mx-auto mt-5 p-4 border rounded shadow-sm bg-light" } do |f| %>

      <h2 class="text-center mb-4">New User</h2>

      <% if @user.errors.any? %>
      <div class="alert alert-danger">
      <h5>
        We can not save this user because of the following reasons:
      </h5>
      <ul>

      <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      </div>
      <% end %>

      <div class="mb-3">
      <%= f.label :first_name, "First Name", class: "form-label" %>
      <%= f.text_field :first_name,
          class: "form-control",
          placeholder: "Write down your first name" %>
      </div>

      <div class="mb-3">
      <%= f.label :last_name, "Last Name", class: "form-label" %>
       <%= f.text_field :last_name,
          class: "form-control",
          placeholder: "Write down your last name" %>
      </div>

      <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email,
          class: "form-control",
          placeholder: "Write down your email" %>
      </div>

      <div class="d-grid">
      <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
      </div>
      </br>
      <div class="d-grid">
      <%= link_to 'Back to Users List', users_path, class: 'btn btn-secondary' %>
      </div>
<% end %>
