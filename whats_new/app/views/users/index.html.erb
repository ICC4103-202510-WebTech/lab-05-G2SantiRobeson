<h1 class="text-center mb-4">
  Users
</h1>

<div class="text-center mb-4">
<%#= link_to 'Add New User', new_user_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">

</table>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Updated At</th>
      <th>Created At</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Messages</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.created_at %></td>
        <% if can? :edit, user %>
          <td><%= link_to 'View', user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
        <% else %>
          <td>You can't</td>
          <td>You can't</td>
        <% end %>
        <td><%= user.messages.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
