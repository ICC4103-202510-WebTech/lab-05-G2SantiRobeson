<h1 class="text-center display-5 mb-4">
    <%= @user.first_name %> <%= @user.last_name %>
</h1>


<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <h2 class="text-center mb-4">User Information</h2>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>ID:</strong> 
        <%= @user.id %>
    </li>
      <li class="list-group-item">
        <strong>First Name:</strong> 
        <%= @user.first_name %>
    </li>
      <li class="list-group-item">
        <strong>Last Name:</strong> 
        <%= @user.last_name %>
    </li>
      <li class="list-group-item">
        <strong>Email:</strong> 
        <%= @user.email %>
    </li>
      <li class="list-group-item">
        <strong>Updated at:</strong> 
        <%= @user.updated_at %>
    </li>
      <li class="list-group-item">
        <strong>Created at:</strong> 
        <%= @user.created_at %>
    </li>
    </ul>
  </div>
</div>

<br>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <h2 class="text-center mb-4">User's Chats:</h2>
    <ul>
      <% (@user.sent_chats + @user.received_chats).uniq.each do |chat| %>
        <li>
          <%= link_to "Chat ##{chat.id}", chat_path(chat) %>
          - Sender: <%= chat.sender.first_name %> <%= chat.sender.last_name %>, Receiver: <%= chat.receiver.first_name %> <%= chat.receiver.last_name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<br>


<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
  <h2 class="text-center mb-4">Sent Messages</h2>
  <ul>
    <% @user.messages.each do |msg| %>
      <li>
        <%= link_to "Message ##{msg.id}", message_path(msg) %>:
        <%= msg.body %>
      </li>
    <% end %>
  </ul>
    </div>
</div>

<div class="text-center mt-4">
  <%= link_to 'Back to Users List', users_path, class: 'btn btn-secondary' %>
  <%= link_to 'Add New User',  new_user_path, class: 'btn btn-primary ml-2' %>
  <%= link_to 'Edit', edit_user_path, class: 'btn btn-info ml-2 text-white' %>
</div>