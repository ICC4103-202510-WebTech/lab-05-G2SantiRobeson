<h1 class="text-center display-5 mb-4">
    Chat #<%= @chat.id %>
</h1>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>ID:</strong> 
        <%= @chat.id %>
    </li>
      <li class="list-group-item">
        <strong>Sender ID:</strong> 
        <%= @chat.sender_id %>
    </li>
      <li class="list-group-item">
        <strong>Receiver ID:</strong> 
        <%= @chat.receiver_id %>
    </li>
      <li class="list-group-item">
        <strong>Updated at:</strong> 
        <%= @chat.updated_at %>
    </li>
      <li class="list-group-item">
        <strong>Created at:</strong> 
        <%= @chat.created_at %>
    </li>
    </ul>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to 'Back to Chats List', chats_path, class: 'btn btn-secondary' %>
  <%= link_to 'Add New Chat',  new_chat_path, class: 'btn btn-primary ml-2' %>
</div>
