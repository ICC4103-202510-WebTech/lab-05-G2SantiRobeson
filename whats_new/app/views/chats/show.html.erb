<h1 class="text-center display-5 mb-4">
    Chat #<%= @chat.id %>
</h1>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <strong>ID:</strong> 
        <%= @chat.id %>
    </li>
      <li class="list-group-item">
        <strong>Sender ID:</strong> 
        <%= @chat.sender_id %>
    </li>
      <li class="list-group-item">
        <strong>Receiver ID:</strong> 
        <%= @chat.receiver_id %>
    </li>
      <li class="list-group-item">
        <strong>Updated at:</strong> 
        <%= @chat.updated_at %>
    </li>
      <li class="list-group-item">
        <strong>Created at:</strong> 
        <%= @chat.created_at %>
    </li>
    </ul>
  </div>
</div>

<br>

<div class="card mx-auto" style="max-width: 500px;">
  <div class="card-body">
    <h2 class="mb-3 text-center">Messages in This Chat</h2>
    <ul class="list-group mb-4">
      <% @chat.messages.each do |msg| %>
        <li class="list-group-item">
          <p>
            <strong>#<%= msg.id %></strong>
            â€” <em><%= msg.user.first_name %> <%= msg.user.last_name %></em>
            (<%= msg.created_at.strftime("%H:%M %d/%m/%Y") %>)
          </p>
          <p><%= simple_format(msg.body) %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to 'Back to Chats List', chats_path, class: 'btn btn-secondary' %>
  <%= link_to 'Add New Chat',  new_chat_path, class: 'btn btn-primary ml-2' %>
  <%= link_to 'Edit', edit_chat_path, class: 'btn btn-info ml-2 text-white' %>
</div>
