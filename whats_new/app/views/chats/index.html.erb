<h1 class="text-center mb-4">
    Chats
</h1>

<div class="text-center mb-4">
<%= link_to 'Add New Chat', new_chat_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Sender ID</th>
      <th>Receiver ID</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.created_at %></td>
        <td><%= chat.updated_at %></td>
        <% if can? :edit, chat %>
          <td><%= link_to 'View', chat_path(chat), class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_chat_path(chat), class: 'btn btn-sm btn-outline-primary' %></td>
        <% else %>
          <td>You can't</td>
          <td>You can't</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
