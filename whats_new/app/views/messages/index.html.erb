<h1 class="text-center mb-4">
  Messages
</h1>

<div class="text-center mb-4">
<%= link_to 'Add New Message', new_message_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td><%= message.created_at %></td>
        <td><%= message.updated_at %></td>
        <% if can? :edit, message %>
          <td><%= link_to 'View', message_path(message), class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-sm btn-outline-primary' %></td>
        <% else %>
          <td>You can't</td>
          <td>You can't</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
