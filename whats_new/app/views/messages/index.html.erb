<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th> 
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td><%= link_to 'View', message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>